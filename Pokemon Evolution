#Pokemon Evolution


#Init
import random
#Global Variables
pokemon_level = 0
pokemon_name = "Eevee"
day=0

#Functions
def train():
    global pokemon_level
    global day
    global pokemon_name
    day=day+1
    pokemon_level= pokemon_level + 1
    print(str(pokemon_name) + " did 20 curl ups and has leveled up to level " +str(pokemon_level))
    print(str(pokemon_name)+ " is feeling energized. ")

def battle():
    global pokemon_level
    global pokemon_name
    global day
    day=day+1
    outcome = random.randint(1,2)
    if outcome == 2:
        pokemon_level= pokemon_level + 4
        print(str(pokemon_name)+ " has won the battle and leveled up to level:" + str(pokemon_level))
        print(str(pokemon_name) + " is feeling happy and has gotten 2 bonus levels!")
    else:
        print("Your Pokemon did not win and did not level up")
        print(str(pokemon_name)+ " is feeling sad and wants to sleep it off.")


def rest():
    global pokemon_level
    global day
    global pokemon_name
    day=day+1
    print("You are on day: "+ str(day))
    print("Your name is : "+ str(pokemon_name))
    print("You are in level : "+ str(pokemon_level))


def evolve():
    global pokemon_name
    global pokemon_level
    if pokemon_level <5:
        pokemon_name = "Eevee"
        draw_Eevee()
    elif pokemon_level <=15:
        pokemon_name = "Umbreon"
        draw_Umbreon()
    elif pokemon_level >25:
        pokemon_name = "Esperon"
        draw_Espeon()

def special_edition():   # you can collect a special version of the pokemon but will not play with it.
    result=random.randint(1,15)
    if result == 9:
        print("Congratutations you have received a special edition version of Eevee! ")
        draw_special()
    else:
        evolve()
        rest()


