def pokemon_game():
    print("Welcome to Pokemon Evolution")
    while True:
        print("Choose an activity for the day: "+ str(day+1))
        print("""1.Train
2.Gym Battle
3.Rest
4.Quit""")
        activity=int(input("Activity for the day: "))
        if activity == 1:
            train()
            evolve()
        elif activity == 2:
            battle()
            evolve()
        elif activity == 3:
            special_edition()
        elif activity == 4:
            print("Thanks for playing Pokemon Evolution")
            break


#main
pokemon_game()
